
<%= simple_form_for(@match) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.association :home_team %>
    <%= f.association :away_team %>
    <%= f.input :start_time %>
    <%= f.association :league %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
<%= form_with(model: match, local: true) do |form| %>
  <!-- ... other fields ... -->

  <div class="field">
    <%= form.label :home_team_score %>
    <%= form.number_field :home_team_score, min: 0 %>
  </div>

  <div class="field">
    <%= form.label :away_team_score %>
    <%= form.number_field :away_team_score, min: 0 %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
